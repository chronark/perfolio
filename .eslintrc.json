{
  "root": true,
  "ignorePatterns": ["**/*"],
  "rules": {
    "eslint@typescript-eslint/ban-types": "off"
  },
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ],
        "eslintjsx-a11y/anchor-is-valid": "off",
        "jsx-a11y/anchor-is-valid": "off"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.graphql", "*.gql"],
      "parser": "@graphql-eslint/eslint-plugin",
      "plugins": ["@graphql-eslint"],
      "rules": {
        // "avoid-duplicate-fields": "error",
        // "avoid-operation-name-prefix": "error",
        // "no-opperaton-name-suffix": "error",
        // "no-unreachable-types": "error",
        // "no-unused-variables": "error",
        // "require-description": "error",
        // "unique-type-names": "error",
        // "unique-enum-value-names": "error",
        // "unique-field-definition-names": "error"
      }
    }
  ]
}
