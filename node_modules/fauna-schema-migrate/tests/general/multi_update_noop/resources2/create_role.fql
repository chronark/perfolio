CreateRole({
  name: "read_users",
  privileges: [{
    resource: Collection("users"),
    actions: {
      read: true,
      write: false,
      create: false,
      delete: false,
      history_read: false,
      history_write: false,
      unrestricted_read: false
    }
  }, {
    resource: Index("users_by_email"),
    actions: {
      unrestricted_read: false,
      read: true
    }
  }, {
    resource: Function("login"),
    actions: {
      call: true
    }
  }]
})