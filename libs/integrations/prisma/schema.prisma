datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}


model User {
    id                String     @id @default(uuid())
    name String @unique
    email String @unique

    // transactions Transaction[]
}



model Transaction {
    id String @id @default(uuid())
     createdAt DateTime @default(now())
    updatedAt DateTime @default(now())
    
    assetId String

    executedAt Int
    volume Float
    value Float
    
    // user User @relation(fields: [userId], references:[id])
    userId String


}

enum Currency {
    EUR
}

model UserSettings {
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now())

    userId String @unique

    defaultCurrency Currency
    defaultExchange String
}




model StockMap {
    ticker String @id
    isin String @unique
    name String @unique
}
