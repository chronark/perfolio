{
  "name": "perfolio",
  "version": "1.0.0",
  "scripts": {
    "dev": "blitz dev",
    "prebuild": "blitz prisma generate",
    "build": "blitz build",
    "start": "blitz start",
    "studio": "blitz prisma studio",
    "fmt": "yarn lint && yarn format",
    "lint": "eslint --ignore-path .gitignore  --ext .js,.ts,.tsx .",
    "format": "prettier --loglevel warn --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@headlessui/react": "1.2.0",
    "@heroicons/react": "1.0.1",
    "@hookform/resolvers": "2.5.1",
    "@prisma/client": "~2.20",
    "@radix-ui/react-tooltip": "0.0.18",
    "@types/preview-email": "2.0.0",
    "@types/react": "17.0.7",
    "autoprefixer": "10.2.5",
    "blitz": "0.35.0",
    "eslint": "7.27.0",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "next-themes": "0.0.14",
    "postcss": "8.3.0",
    "prettier": "2.3.0",
    "prettier-plugin-prisma": "0.7.0",
    "pretty-quick": "3.1.0",
    "preview-email": "3.0.4",
    "prisma": "~2.20",
    "react": "0.0.0-experimental-6a589ad71",
    "react-dom": "0.0.0-experimental-6a589ad71",
    "react-error-boundary": "3.1.3",
    "react-hook-form": "7.6.6",
    "recharts": "2.0.9",
    "tailwindcss": "2.1.2",
    "typescript": "~4.2",
    "zod": "1.11.17"
  },
  "private": true,
  "devDependencies": {
    "@tailwindcss/jit": "0.1.18"
  }
}
