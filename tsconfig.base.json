{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,
    "jsx": "preserve",
    "types": ["jest", "node", "cypress"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@perfolio/api/client": ["libs/api/client/src/index.ts"],
      "@perfolio/api/graphql": ["libs/api/graphql/src/index.ts"],
      "@perfolio/api/server": ["libs/api/server/src/index.ts"],
      "@perfolio/app/components": ["libs/app/components/src/index.ts"],
      "@perfolio/app/middleware": ["libs/app/middleware/src/index.ts"],
      "@perfolio/feature/email": ["libs/feature/email/src/index.ts"],
      "@perfolio/feature/finance/kpis": ["libs/feature/finance/kpis/src/index.ts"],
      "@perfolio/feature/finance/returns": ["libs/feature/finance/returns/src/index.ts"],
      "@perfolio/feature/i18n": ["libs/feature/i18n/src/index.ts"],
      "@perfolio/feature/tokens": ["libs/feature/tokens/src/index.ts"],
      "@perfolio/integrations/bankofengland": ["libs/integrations/bankofengland/src/index.ts"],
      "@perfolio/integrations/cookies": ["libs/integrations/cookies/src/index.ts"],
      "@perfolio/integrations/ecb": ["libs/integrations/ecb/src/index.ts"],
      "@perfolio/integrations/fauna": ["libs/integrations/fauna/src/index.ts"],
      "@perfolio/integrations/iexcloud": ["libs/integrations/iexcloud/src/index.ts"],
      "@perfolio/integrations/localstorage": ["libs/integrations/localstorage/src/index.ts"],
      "@perfolio/integrations/openfigi": ["libs/integrations/openfigi/src/index.ts"],
      "@perfolio/integrations/redis": ["libs/integrations/redis/src/index.ts"],
      "@perfolio/types": ["libs/types/src/index.ts"],
      "@perfolio/ui/charts": ["libs/ui/charts/src/index.ts"],
      "@perfolio/ui/components": ["libs/ui/components/src/index.ts"],
      "@perfolio/ui/form": ["libs/ui/form/src/index.ts"],
      "@perfolio/util/currency": ["libs/util/currency/src/index.ts"],
      "@perfolio/util/env": ["libs/util/env/src/index.ts"],
      "@perfolio/util/errors": ["libs/util/errors/src/index.ts"],
      "@perfolio/util/numbers": ["libs/util/numbers/src/index.ts"],
      "@perfolio/util/time": ["libs/util/time/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
