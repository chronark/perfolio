{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noPropertyAccessFromIndexSignature": false,
    "jsx": "preserve",
    "types": ["jest", "node", "cypress"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@perfolio/api/feature/lambda": ["libs/api/feature/lambda/src/index.ts"],
      "@perfolio/api/feature/middleware": ["libs/api/feature/middleware/src/index.ts"],
      "@perfolio/app/components": ["libs/app/components/src/index.ts"],
      "@perfolio/data-access/api-client": ["libs/data-access/api-client/src/index.ts"],
      "@perfolio/data-access/cache": ["libs/data-access/cache/src/index.ts"],
      "@perfolio/data-access/db": ["libs/data-access/db/src/index.ts"],
      "@perfolio/data-access/fauna-adapter": ["libs/data-access/fauna-adapter/src/index.ts"],
      "@perfolio/data-access/iexcloud": ["libs/data-access/iexcloud/src/index.ts"],
      "@perfolio/data-access/localstorage": ["libs/data-access/localstorage/src/index.ts"],
      "@perfolio/data-access/mutations": ["libs/data-access/mutations/src/index.ts"],
      "@perfolio/data-access/queries": ["libs/data-access/queries/src/index.ts"],
      "@perfolio/feature/email": ["libs/feature/email/src/index.ts"],
      "@perfolio/feature/finance/returns": ["libs/feature/finance/returns/src/index.ts"],
      "@perfolio/feature/tokens": ["libs/feature/tokens/src/index.ts"],
      "@perfolio/types": ["libs/types/src/index.ts"],
      "@perfolio/ui/charts": ["libs/ui/charts/src/index.ts"],
      "@perfolio/ui/components": ["libs/ui/components/src/index.ts"],
      "@perfolio/ui/design-system": ["libs/ui/design-system/src/index.ts"],
      "@perfolio/util/currency": ["libs/util/currency/src/index.ts"],
      "@perfolio/util/numbers": ["libs/util/numbers/src/index.ts"],
      "@perfolio/util/time": ["libs/util/time/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
